" Line numbers
set number
" Syntax highlighting
syntax on
" Nicer color scheme
colorscheme darkblue
" Expand tabs to spaces
set expandtab 
" Removes annoying "unsaved changes, use ! to override message. Changes are
" saved in buffer
set hidden
" Indentation stuff 
set smartindent
set tabstop=2
set shiftwidth=2
set softtabstop=2
" Linebreak on wordwrap
set formatoptions=1
set linebreak
" Use underscore as a word seperator
set iskeyword-=_
